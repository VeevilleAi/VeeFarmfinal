
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/parent_view"
xmlns:app="http://schemas.android.com/apk/res-auto">
<include layout="@layout/toolbar"
    android:id="@+id/my_toolbar"

    />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/red"
        android:id="@+id/hint_card"
        app:cardCornerRadius="10dp"
        android:alpha="0.3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're trying to get your attention!\nPlease tell which country you are in &amp; we will set this straight. 😁"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/hint"
            android:textSize="10sp"
            android:padding="10dp"
            />

    </android.support.v7.widget.CardView>
<android.support.v7.widget.RecyclerView
    android:id="@+id/chatrecyclerviewid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/my_toolbar"
    android:layout_above="@+id/switch_id"
     />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomlayout"
        android:id="@+id/switch_id"
        android:layout_alignParentEnd="true"
        style="@style/switchstyle"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomlayout"
        android:background="#EEEEEE"
        >
        <android.support.v7.widget.CardView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/camera_fab"
            android:background="@drawable/roundeditext"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_a_message"
                android:id="@+id/input_text_field"
                android:minHeight="40dp"
                android:maxHeight="150dp"
                android:textSize="15sp"
                android:padding="5dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                android:background="@drawable/roundeditext"
                android:inputType="text" />
        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_alignParentEnd="true"
            android:id="@+id/action_button"
            android:layout_margin="5dp"
            android:src="@drawable/ic_mic_black_36dp"
            android:background="@drawable/roundeditext"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/camera_fab"
            android:background="@drawable/roundeditext"
            android:layout_margin="5dp"
            android:layout_toStartOf="@+id/action_button"
            android:src="@drawable/ic_photo_camera_black_24dp"
            />
    </RelativeLayout>
</RelativeLayout>