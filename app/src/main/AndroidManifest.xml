<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veeville.farm">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:name=".helper.AppSingletonClass"
        android:allowBackup="false"

        android:icon="@drawable/app_new_logo_flower"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_new_logo_flower"
        android:supportsRtl="true"
        android:theme="@style/customTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <activity
            android:name=".activity.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CropWorkFlow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DashBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HumidityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ImageShowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LightActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PriceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SoilMoistureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SoilPhActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TemperatureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WeatherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.YouTubePlayerVersion2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tensorflow.ClassifierActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".farmer.FarmDescriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.FarmerRegistration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.FarmsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.FarmRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.DrawFarmInMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.ShowFarmInMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SignActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.FarmerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.AddPreviousYieldFarmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.MarketPlaceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.CropMarketDescActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".farmer.Profile"
            android:screenOrientation="portrait" />
    </application>

</manifest>